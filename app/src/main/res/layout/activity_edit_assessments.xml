<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/editAssessmentName"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Spinner
        android:id="@+id/editAssessmentType"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/editAssessmentName"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CalendarView
        android:id="@+id/editAssessmentDate"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_constraintTop_toBottomOf="@id/editAssessmentType"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>