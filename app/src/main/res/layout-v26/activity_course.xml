<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCourseActivity">


    <EditText
        android:id="@+id/courseName"
        android:layout_width="414dp"
        android:layout_height="47dp"
        android:gravity="center"
        android:importantForAutofill="no"
        android:inputType=""
        android:text="@string/course_name"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/courseStartLbl"
        android:layout_width="113dp"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="@string/term_start"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseName"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <CalendarView
        android:id="@+id/courseStart"
        android:layout_width="416dp"
        android:layout_height="311dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/courseStartLbl"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
        android:id="@+id/courseEndLbl"
        android:layout_width="113dp"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="@string/course_end"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/courseStart"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <CalendarView
        android:id="@+id/courseEnd"
        android:layout_width="416dp"
        android:layout_height="311dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/courseEndLbl" />
    
    <TextView 
        android:id="@+id/mentorLbl"
        android:layout_width="113dp"
        android:layout_height="53dp"
        android:gravity="center"
        android:text="@string/course_mentor"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseEnd"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <EditText
        android:id="@+id/mentorName"
        android:layout_width="414dp"
        android:layout_height="47dp"
        android:gravity="center"
        android:importantForAutofill="no"
        android:inputType=""
        android:text="@string/course_name"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>